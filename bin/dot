#!/bin/sh
#
# dot
#
# `dot` handles installation, updates, things like that. Run it periodically
# to make sure you're on the latest and greatest.

set -e

# Include utilities
source $HOME/.dotfiles/lib/utils.zsh

export DOTFILES=$HOME/.dotfiles

# Install/update homebrew packages
$DOTFILES/homebrew/install.sh 2>&1
brew update

# Install software
$DOTFILES/script/install

# Install npm packages
$DOTFILES/node/install.sh

# Update/install SCM Breeze
$DOTFILES/scm-breeze/install.sh

# Install bower packages
cd $DOTFILES
e_header "Installing Bower components"
bower install
e_success "Done"
# Update bower packages
if type_exists bower; then
  e_header "Updating Bower"
  bower update
  e_success "Done"
fi

printf "\n"
