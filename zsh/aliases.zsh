alias reload="source $HOME/.zshrc"

alias ~="cd ~/"
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias .....='cd ../../../..'
alias ......='cd ../../../../..'

# List directory contents
alias ls='ls -Gh'
alias lsa='ls -lahG'
alias l='ls -lahG'
alias ll='ls -lhG'
alias la='ls -lAhG'

alias mv='mv -v'
alias rm='rm -i -v'
alias cp='cp -v'
